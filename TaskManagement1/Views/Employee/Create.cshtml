

@model TaskManagement1.Models.EmployeeModel

@{
    ViewData["Title"] = "Create Employee"; 
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Employee </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Authentic/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Add Employee </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="content">
    <div class="container-fluid">
        <div class="row">

<h1>Employee Information</h1>

<form asp-action="Create" asp-controller="Employee" method="post" enctype="multipart/form-data">
    <label for="Name">Employee Name</label>
    <input type="text" id="Name" asp-for="Name" required /><br /><br />

    <label for="contact">Contact</label>
    <input type="text" id="contact" asp-for="Contact" required /><br /><br />

    <label for="Picture">Picture</label><br />
    <input type="file" id="Picture" name="Picture" required /><br /><br />

    <input type="submit" class="btn btn-primary" value="Submit" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

</<div>
    </div>
        </div>