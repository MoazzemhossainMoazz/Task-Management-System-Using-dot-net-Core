@model TaskManagement1.Models.AssignTaskModel

<h1>Task Update</h1>
<form asp-action="Edit" asp-controller="AssignTask" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Taskid"></label>
        <input type="number" id="Taskid" asp-for="Taskid" class="form-control" />
        @* <span asp-validation-for="TaskName" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <input type="number" id="Section" asp-for="UserId" class="form-control" />
        @* <span asp-validation-for="TaskName" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label asp-for="SubmitDate"></label>
        <input type="date" id="SubmitDate" asp-for="SubmitDate" class="form-control" />
        @* <span asp-validation-for="TaskName" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input type="date" id="DueDate" asp-for="DueDate" class="form-control" />
        @* <span asp-validation-for="TaskName" class="text-danger"></span> *@
    </div>

    <div class="form-group">
        <label asp-for="Remark"></label>
        <input type="text" id="Remark" asp-for="Remark" class="form-control" />
        @* <span asp-validation-for="TaskName" class="text-danger"></span> *@
    </div>

    <input type="submit" class="btn btn-primary" value="Update" />
