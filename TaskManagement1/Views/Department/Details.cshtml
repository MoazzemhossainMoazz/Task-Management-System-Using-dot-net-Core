@{
}

@model TaskManagement1.Models.DepartmentModel

<div class="crud">
    <h2>Department Details</h2>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>

        <dt class="col-sm-2">Section</dt>
        <dd class="col-sm-10">@Model.Section</dd>

        <dt class="col-sm-2">Faculty</dt>
        <dd class="col-sm-10">@Model.Subject</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>